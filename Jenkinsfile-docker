pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/platina-git/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t myweb:v1 docker .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag myweb:v1 rkdxogh90/myweb:v1'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker login -u rkdxogh90 -p "!Tkstndb75"'
          sh 'docker push rkdxogh90/myweb:v1'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { image 'docker:dind' }
      }
      steps {
        sh 'docker -H tcp://172.31.21.100:2375 container run --detach --name mywebcon -p 80:8080 rkdxogh90/myweb:v1'
      }
    }
  }
